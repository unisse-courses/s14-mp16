<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"> 
        
          <style>
                #formgroup{
                    display:block;
                }

                .create{
                    color:#C9D43F;
                    font-family: Bebas; 
                }

                .navbar-brand{
                    font-family: Bebas; 
                }

                .card{
                    display: block;
                    text-align: center;

                }

                body{
    background-color: antiquewhite;
                }
              
              form{
                  padding: 10px;
              }
              
              #registerbox{
                  padding-top: 30px;
              }


              #submitbutt{
                      background-color:burlywood;

              }
            
        </style>
    </head>
    
    <body>
    
        <div class="mx-auto" style="width: 600px;" id="registerbox">
            <div class="card" style="width: 36rem;">
                <p class="create">Register</p>
                    <form>
                      <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="em" placeholder="Email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                      </div>
                        
                      
                       <div class="form-group">
                            <label for="exampleInputEmail1">Username</label>
                            <input type="username" class="form-control" id="usernameInput" placeholder="Username" name="un">
                      </div>
                        
                      <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="pw">
                      </div>
                        
                      <div class="form-group">
                        <label for="exampleInputPassword1">Confirm Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Re-Enter Password">
                      </div>
                      
                        
                      <label for="exampleFormControlFile1">Upload Avatar</label>
                        <input type="file" class="form-control-file" id="exampleFormControlFile1" name="im">
                      
                        
                      <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Remember me?</label>
                      </div>
                        
                        <button type="submit" class="btn btn-primary" id="submitbutt"><a href="/login">Submit</a></button>
                </form>
            </div>
        </div>
    </body>