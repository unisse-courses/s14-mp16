<div class="mx-auto" style="width: 600px;" id="createcard">
    <div class="card" style="width: 36rem;" , id="createpost">
        <p class="create">Edit Profile</p>
        <form method="POST" action="/edit" class="registercontainer">
            <input class="" type="hidden" id="uid" name="uid" value="{{account._id}}">
            <div class="form-group">
                <label for="uname" style="text-align:left">Username</label>
                <input class="" type="text" id="uname" name="uname" value="{{account.username}}" required>
            </div>
            <div class="form-group">
                <label for="uname">Full Name</label>
                <input class="" type="text" id="fname" name="fname" value="{{account.fullname}}" required>
            </div>
            <div class="form-group">
                <label for="uname">Email</label>
                <input class="" type="text" id="email" name="email" value="{{account.email}}" required>
            </div>
            <div class="form-group">
                <label for="uname">New Password</label>
                <input class="" type="password" placeholder="Enter new password" id="pass" name="pass" required>
            </div>
            <div class="form-group">
                <label for="uname">Confirm Password</label>
                <input class="" type="password" placeholder="Confirm Password" id="confpass" name="confpass" required>
            </div>
            <button type="submit" class="btn btn-primary" id="buttpost">Save</button>
        </form>
    </div>
</div>