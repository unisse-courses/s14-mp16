                    <p id="datetime">{{date}}</p>
                    <div id="menuIcon"></div>
                </div>
            </div>
            <div id="postImg">{{img}}</div>
            <div class="postFooter">
                <div id="icons">
                    <img src="../public/stylesheets/images/like.png" id="btnLike">
